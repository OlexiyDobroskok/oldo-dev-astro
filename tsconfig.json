{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/layouts/*": ["src/layouts/*"],
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/animations/*": ["src/animations/*"],
      "@styles/*": ["src/styles/*"],
      "@/configs/*": ["src/configs/*"],
      "@/assets/*": ["src/assets/*"]
    }
  }
}
